    "formulas": [
        {
            "id": "pf:formula:npv",
            "name": "Net Present Value",
            "latex": "NPV = \\sum_{t=0}^{n} \\frac{C_t}{(1+r)^t}",
            "symbolic": "NPV = sum(C_t / (1 + r)^t for t in range(n))",
            "concept_id": "pf:fin:npv",
            "variables": [
                "C",
                "r",
                "t",
                "n"
            ]
        },
        {
            "id": "pf:formula:roi",
            "name": "Return on Investment",
            "latex": "ROI = \\frac{\\text{Gain} - \\text{Cost}}{\\text{Cost}} \\times 100\\%",
            "symbolic": "ROI = ((gain - cost) / cost) * 100",
            "concept_id": "pf:fin:roi",
            "variables": [
                "gain",
                "cost"
            ]
        },
        {
            "id": "pf:formula:sharpe",
            "name": "Sharpe Ratio",
            "latex": "S = \\frac{R_p - R_f}{\\sigma_p}",
            "symbolic": "sharpe = (return_portfolio - risk_free) / std_portfolio",
            "concept_id": "pf:fin:sharpe",
            "variables": [
                "R_p",
                "R_f",
                "\\sigma_p"
            ]
        },
        {
            "id": "pf:formula:capm",
            "name": "CAPM Formula",
            "latex": "E(R_i) = R_f + \\beta_i(E(R_m) - R_f)",
            "symbolic": "expected_return = risk_free + beta * (market_return - risk_free)",
            "concept_id": "pf:fin:capm",
            "variables": [
                "R_f",
                "\\beta",
                "R_m"
            ]
        }
    ],
